# Server (required for server + pre-seeded DB)
PORT=4000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/tiny-inventory

# NODE_ENV=development seeds the DB on every server start. Optional: RUN_SEED=true to seed in production
RUN_SEED=true
# RATE_LIMIT_* optional (defaults shown)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# CORS (optional: fallback is SERVICE_URL_WEB or http://localhost:3000)
CORS_ORIGIN=http://localhost:3000
SERVICE_URL_WEB=

# Web build (VITE_API_URL baked in at build; for Docker use your server URL)
VITE_API_URL=http://localhost:4000
